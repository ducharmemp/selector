{
  "extends": "./tsconfig",
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/main"
  },
  "exclude": [
    "src/index.module.ts",
    "node_modules/**",
    // typescript-starter: exclude CLI from module build, since it's exclusively
    // for Node.js. (This should also be stripped from the generated project.)
    "src/cli/**/*.ts"
  ]
}